@model StudentPortal.Web.Models.AddScheduleViewModel

@{
    ViewData["Title"] = "Add Schedule";
    Layout = "_Layout";
}

@section Styles {
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Lato', sans-serif;
            color: #333;
        }

        .container {
            margin-top: 40px;
            background-color: white;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            padding: 40px;
        }

        h2 {
            font-family: 'Playfair Display', serif;
            color: #2c3e50;
            font-weight: 700;
            text-align: center;
            margin-bottom: 30px;
        }

        .form-label {
            font-weight: 600;
            color: #7f8c8d;
        }

        .form-control, .form-select {
            border-radius: 0;
            border: 1px solid #e0e0e0;
            padding: 12px 15px;
        }

            .form-control:focus, .form-select:focus {
                border-color: #2c3e50;
                box-shadow: none;
            }

        .btn-primary {
            background-color: #2c3e50;
            border: none;
            border-radius: 0;
            padding: 12px 25px;
            font-weight: 400;
            text-transform: uppercase;
            letter-spacing: 2px;
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #34495e;
                transform: translateY(-3px);
                box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            }

        .input-group-text {
            background-color: #f8f9fa;
            border: 1px solid #e0e0e0;
        }
    </style>
}

<div class="container">
    <h2><i class="fas fa-calendar-alt me-3"></i>Add Schedule</h2>

    <form asp-action="Add" method="post">

        <div class="mb-4">
            <label asp-for="EdpCode" class="form-label">EDP Code</label>
            <div class="input-group">
                <span class="input-group-text"><i class="fas fa-code"></i></span>
                <input asp-for="EdpCode" class="form-control" required />
            </div>
            <span asp-validation-for="EdpCode" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="SubjCode" class="form-label">Subject Code</label>
            <div class="input-group">
                <span class="input-group-text"><i class="fas fa-book"></i></span>
                <select asp-for="SubjCode" class="form-select" asp-items="Model.Subjects" required>
                    <option value="">Select a Subject</option>
                </select>
            </div>
            <span asp-validation-for="SubjCode" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="StartTime" class="form-label">Start Time</label>
            <div class="input-group">
                <span class="input-group-text"><i class="fas fa-clock"></i></span>
                <input asp-for="StartTime" class="form-control" type="time" required />
            </div>
            <span asp-validation-for="StartTime" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="EndTime" class="form-label">End Time</label>
            <div class="input-group">
                <span class="input-group-text"><i class="fas fa-clock"></i></span>
                <input asp-for="EndTime" class="form-control" type="time" required />
            </div>
            <span asp-validation-for="EndTime" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Room" class="form-label">Room</label>
            <div class="input-group">
                <span class="input-group-text"><i class="fas fa-door-open"></i></span>
                <input asp-for="Room" class="form-control" required />
            </div>
            <span asp-validation-for="Room" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Section" class="form-label">Section</label>
            <div class="input-group">
                <span class="input-group-text"><i class="fas fa-users"></i></span>
                <input asp-for="Section" class="form-control" required />
            </div>
            <span asp-validation-for="Section" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="SchoolYear" class="form-label">School Year</label>
            <div class="input-group">
                <span class="input-group-text"><i class="fas fa-calendar-check"></i></span>
                <input asp-for="SchoolYear" class="form-control" required />
            </div>
            <span asp-validation-for="SchoolYear" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-center mt-5">
            <button type="submit" class="btn btn-primary me-3"><i class="fas fa-plus-circle me-2"></i>Add Schedule</button>
            <a asp-action="List" class="btn btn-secondary"><i class="fas fa-times-circle me-2"></i>Back to List</a>
        </div>
    </form>
</div>

@model IEnumerable<StudentPortal.Web.Models.Entities.Schedule>



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400&display=swap" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Lato', sans-serif;
            color: #333;
        }

        .container {
            margin-top: 40px;
        }

        h2 {
            font-family: 'Playfair Display', serif;
            color: #2c3e50;
            font-weight: 700;
            margin-bottom: 30px;
        }

        .table {
            background-color: #fff;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }

        .table thead th {
            background-color: #2c3e50;
            color: #fff;
            font-weight: 400;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .btn {
            border-radius: 0;
            font-weight: 400;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s ease;
        }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        .btn-success {
            background-color: #2c3e50;
            border-color: #2c3e50;
            color: #fff;
            padding: 10px 20px;
            margin-bottom: 20px;
        }

        .btn-success:hover {
            background-color: #34495e;
            border-color: #34495e;
        }

        .btn-danger {
            padding: 5px 10px;
            font-size: 0.8rem;
        }

        .alert {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="text-center">
            <h2>Schedule List</h2>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>@* Schedule List *@</h2>
            <a class="btn btn-success" asp-controller="Schedule" asp-action="Add">Add Schedule</a>
        </div>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">EDP Code</th>
                    <th scope="col">Subject Code</th>
                    <th scope="col">Start Time</th>
                    <th scope="col">End Time</th>
                    <th scope="col">Room</th>
                    <th scope="col">Section</th>
                    <th scope="col">School Year</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var schedule in Model)
                {
                    <tr>
                        <td>@schedule.EdpCode</td>
                        <td>@schedule.SubjCode</td>
                        <td>@schedule.StartTime.ToString("hh\\:mm")</td>
                        <td>@schedule.EndTime.ToString("hh\\:mm")</td>
                        <td>@schedule.Room</td>
                        <td>@schedule.Section</td>
                        <td>@schedule.SchoolYear</td>
                        <td>
                            <a class="btn btn-warning" asp-controller="Schedule" asp-action="Edit" asp-route-edpCode="@schedule.EdpCode">Edit</a>
                            <a class="btn btn-danger" asp-controller="Schedule" asp-action="Delete" asp-route-edpCode="@schedule.EdpCode">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>

@model IEnumerable<StudentPortal.Web.Models.Entities.Subject>



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400&display=swap" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Lato', sans-serif;
            color: #333;
        }

        .container {
            margin-top: 40px;
            width: 90%;
            max-width: 2000px;
        }

        h2 {
            font-family: 'Playfair Display', serif;
            color: #2c3e50;
            font-weight: 700;
            margin-bottom: 30px;
        }

        .table {
            background-color: #fff;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }

        .table thead th {
            background-color: #2c3e50;
            color: #fff;
            font-weight: 400;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .btn {
            border-radius: 0;
            font-weight: 400;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s ease;
        }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        .btn-primary {
            background-color: #2c3e50;
            border-color: #2c3e50;
            color: #fff;
            padding: 10px 20px;
            margin-bottom: 20px;
        }

        .btn-primary:hover {
            background-color: #34495e;
            border-color: #34495e;
        }

        .btn-success {
            background-color: #2c3e50;
            border-color: #2c3e50;
            color: #fff;
            padding: 10px 20px;
            margin-bottom: 20px;
        }
        .btn-warning, .btn-danger {
            padding: 5px 10px;
            font-size: 0.8rem;
        }

        .alert {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="text-center">
            <h2>Subject List</h2>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }
        
        <a class="btn btn-success" asp-action="Add" class="btn btn-primary">Add New Subject</a>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Subject Code</th>
                    <th scope="col">Subject Description</th>
                    <th scope="col">Units</th>
                    <th scope="col">Offering</th>
                    <th scope="col">Category</th>
                    <th scope="col">Course Code</th>
                    <th scope="col">Curriculum Year</th>
                    <th scope="col">Subject Requisite</th>
                    <th scope="col">Is Pre-Requisite</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var subject in Model)
                {
                    <tr>
                        <td>@subject.Subj_Code</td>
                        <td>@subject.SubjectDescription</td>
                        <td>@subject.Units</td>
                        <td>@subject.Offering</td>
                        <td>@subject.Category</td>
                        <td>@subject.Course_Code</td>
                        <td>@subject.CurriculumYear</td>
                        <td>@subject.SubjectRequisite</td>
                        <td>@(subject.IsPreRequisite.GetValueOrDefault() ? "Yes" : "No")</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@subject.Subj_Code" class="btn btn-warning">Edit</a>
                            <a asp-action="Delete" asp-route-id="@subject.Subj_Code" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>
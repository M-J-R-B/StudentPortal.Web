<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Student</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            color: #333;
        }

        .container {
            background-color: white;
            border-radius: 15px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            padding: 30px;
        }

        h2 {
            color: #007bff;
            font-weight: bold;
            text-align: center;
            margin-bottom: 30px;
        }

        .form-label {
            font-weight: 600;
        }

        .form-control, .form-select {
            border-radius: 8px;
            border: 1px solid #ced4da;
            padding: 10px 15px;
        }

            .form-control:focus, .form-select:focus {
                border-color: #007bff;
                box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
            }

        .btn-primary {
            background-color: #007bff;
            border: none;
            border-radius: 8px;
            padding: 10px 20px;
            font-weight: bold;
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                transform: translateY(-2px);
            }

        .input-group-text {
            background-color: #e9ecef;
            border: 1px solid #ced4da;
            border-radius: 8px 0 0 8px;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-4"><i class="fas fa-user-plus me-2"></i>Delete Student</h2>

        @if (Model is null)
        {
            <p>Student not found</p>
            return;
        }
        else
        {
            <form method="post">
                <div class="mb-3">
                    <label for="Id" class="form-label">ID</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                        <input type="text" class="form-control" id="firstName" asp-for="Id" readonly>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="firstName" class="form-label">First Name</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                        <input type="text" class="form-control" id="firstName" asp-for="FirstName" readonly>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="middleName" class="form-label">Middle Name</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                        <input type="text" class="form-control" id="firstName" asp-for="MiddleName" readonly>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="lastName" class="form-label">Last Name</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                        <input type="text" class="form-control" id="lastName" asp-for="LastName" readonly>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="yearOfBirth" class="form-label">Year</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                        <input type="number" class="form-control" id="yearOfBirth" asp-for="Year" min="1" max="4" step="1" readonly>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="course" class="form-label">Course</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-graduation-cap"></i></span>
                        <select class="form-select" id="course" asp-for="Course" disabled>
                            <option value="">Select a course</option>
                            <option value="BSCS">Computer Science</option>
                            <option value="BSCE">Computer Engineering</option>
                            <option value="BSIT">Information Technology</option>
                            <option value="BSIS">Information System</option>
                        </select>
                    </div>
                </div>
                <div class="text-justify">
                    <button type="submit" class="btn btn-primary btn-lg"><i class="fas fa-plus-circle me-2"></i>Delete</button>
                </div>
                <div class="text-justify">
                    <a class="btn btn-primary btn-lg" asp-controller="Home" asp-action="Index"><i class="fas fa-plus-circle me-2"></i>Cancel</a>
                </div>
            </form>
        }
    </div>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>
@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400&display=swap" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Lato', sans-serif;
            color: #333;
        }

        .container {
            margin-top: 40px;
        }

        h1 {
            font-family: 'Playfair Display', serif;
            color: #2c3e50;
            font-weight: 700;
            margin-bottom: 30px;
        }

        .table {
            background-color: #fff;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }

            .table thead th {
                background-color: #2c3e50;
                color: #fff;
                font-weight: 400;
                text-transform: uppercase;
                letter-spacing: 1px;
            }

        .btn {
            border-radius: 0;
            font-weight: 400;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s ease;
        }

            .btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            }

        .btn-warning, .btn-danger {
            padding: 5px 10px;
            font-size: 0.8rem;
        }

        .btn-success {
            background-color: #2c3e50;
            border-color: #2c3e50;
            color: #fff;
            padding: 10px 20px;
            margin-bottom: 20px;
        }

            .btn-success:hover {
                background-color: #34495e;
                border-color: #34495e;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="text-center">
            <h1 class="display-4">Welcome to Student Portal</h1>
        </div>

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Student List</h2>
            <a class="btn btn-success" asp-controller="Students" asp-action="Add">Add Student</a>
        </div>

        @model List<StudentPortal.Web.Models.Entities.Student>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Middle Name</th>
                    <th scope="col">Course</th>
                    <th scope="col">Year</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var student in Model)
                {
                    <tr>
                        <td>@student.Id</td>
                        <td>@student.FirstName</td>
                        <td>@student.LastName</td>
                        <td>@student.MiddleName</td>
                        <td>@student.Course</td>
                        <td>@student.Year</td>
                        <td>
                            <a class="btn btn-warning" asp-controller="Students" asp-action="Edit" asp-route-id="@student.Id">Edit</a>
                            <a class="btn btn-danger" asp-controller="Students" asp-action="Delete" asp-route-id="@student.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>